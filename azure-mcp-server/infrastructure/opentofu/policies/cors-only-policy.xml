<policies>
    <inbound>
        <base />
        <cors allow-credentials="true">
            <allowed-origins>
                <origin>http://localhost:5500</origin>
                <origin>http://127.0.0.1:5500</origin>
                <origin>http://localhost:3000</origin>
                <origin>http://localhost:8000</origin>
                <origin>http://localhost:8080</origin>
                <origin>https://github.com</origin>
                <origin>https://copilot.github.com</origin>
            </allowed-origins>
            <allowed-methods>
                <method>*</method>
            </allowed-methods>
            <allowed-headers>
                <header>*</header>
            </allowed-headers>
            <expose-headers>
                <header>*</header>
            </expose-headers>
        </cors>
    </inbound>
    <backend>
        <base />
    </backend>
    <outbound>
        <base />
    </outbound>
    <on-error>
        <base />
    </on-error>
</policies>